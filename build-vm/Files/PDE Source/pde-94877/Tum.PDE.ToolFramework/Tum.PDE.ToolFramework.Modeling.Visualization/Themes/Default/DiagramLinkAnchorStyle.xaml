<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush Color="Black" x:Key="SolidBorderBrushLink"/>
    
    <Style x:Key="ArrowSymbolBaseStyle" TargetType="Path">
        <Setter Property="Stretch" Value="Fill"/>
    </Style>
    
    <!-- Arrow -->
    <Style x:Key="DefaultArrowAnchorStyle" TargetType="Path" BasedOn="{StaticResource ArrowSymbolBaseStyle}">
        <Setter Property="Fill" Value="{StaticResource SolidBorderBrushLink}"/>
        <Setter Property="Data" Value="M0,0 8,4 0,8 Z"/>
    </Style>
    
    <!-- Diamond  -->
    <Style x:Key="DefaultDiamondAnchorStyle" TargetType="Path" BasedOn="{StaticResource ArrowSymbolBaseStyle}">
        <Setter Property="Fill" Value="{StaticResource SolidBorderBrushLink}"/>        
        <Setter Property="Data" Value="M-5,0 0,-5 5,0 0,5 Z"/>
    </Style>
</ResourceDictionary>